extends layout

block content
  h1= title
  -
    const results = [
      { model: "Instrument 1", product_type: piano, price: 399.99 },
      { model: "Instrument 2", product_type: guitar, price: 949.99 },
      { model: "Instrument 3", product_type: harp, price: 699.99 }
    ];
  .container-fluid
  .row
    - for (let i = 0; i < results.length; i++)
      .col-sm-2
        h4= results[i].model
        h3(onclick=`buy(${i})`) BUY
        p Screen Size: #{results[i].product_type} 
        p Price: $#{results[i].price}

  script.
      function buy(index) {
        alert("You purchased item " + index);
      }
